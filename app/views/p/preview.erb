<%= javascript_include_tag 'preview', 'templates','swfobject/swfobject'%>
<%= stylesheet_link_tag "preview","video-js" %>

<div class="mainsec" id="contentview">
</div>
<div class="sidesec">
  <div class="box">
    <h3>
      <%= @course.title %>
    </h3>
    <p class="buycourse">
      <%= @course.course_items.count %> Videos <button id="bt_buycourse" class="light_gradient buycourse">Buy series: $<%= @course.amount %> </button>
    </p>
    <p class="description">
      <%= @course.description %>
    </p>

    <ul id="courselist" class="courselist active listbox">

    </ul>
    <form id="buy" action="<%= url_for :action => 'checkout' , :controller => 'purchasing' %>" method="post">
      <input type="hidden" name="ci" value="" />
      <input type="hidden" name="ret" value="<%= request.url %>" />
    </form>
  </div>
</div>

<%= render :partial => "shared/purchasebox", :locals => {:content => {}} %>

<% content_for(:javascript) do %>
<script type="text/template" id="courseitem-template">
    <%% if (content.visible) {%>
      <a class="play" cid="<%%= content.id %>" href="#">
        <p class="title"><%%= content.title %></p>
        <span class="soft_gradient playbutton"><span class="icon">â€º</span></span>
      </a>
    <%% } else { %>
      <span class="play">
        <a href="#" rel="<%%= id %>" class="buy popup_login">
          <p class="title"><%%=  content.title %></p>
          <button class="light_gradient amount">Buy: $<%%= amount %></button>
        </a>
      </span>
    <%% } %>
    <p><%%= content.tagline%></p>
</script>
<script type="text/template" id="contentview-template">
<h1 class="title"><%%= content.title%></h1>
<div class="player">
  <%%= contentboxhtml%>
</div>
<div class="left">
    <p class="tagline"><%%= content.tagline%></p>
</div>
<div class="right">
  <h3>Download</h3>
    <ul id="downloadchild" class="child">
      <li><a class="ipad"   href="<%%= content.ipad%>">iPad</a></li>
      <li><a class="iphone" href="<%%= content.iphone%>">iPhone</a></li>
    </ul>

  <h3>Resources</h3>
  <ul id="morelist" class="morelist listbox">
    <%% $.each(subcontents,function(i,s){ %>
    <li class="<%%= s.type %>"><a href="<%%= (s.type == "Image") ? s.large : s.src %>"><%%= s.title %></a></li>
    <%% }); %>
  </ul>
  <ul id="referencelist" class="referencelist listbox active">
    <%% $.each(references,function(i,r){ %>
    <li class="link"><%%= r.html %></li>
    <%% }); %>
  </ul>
</script>
<script type="text/javascript">
    $(function() { 
      var courseItemListView = new CourseItemListView({basepath: "<%= courses_path %>/../p/",courseid:<%= @course.id %>});
    });

</script>
<% end %>
