<%= javascript_include_tag 'preview', 'templates','swfobject/swfobject'%>
<%= stylesheet_link_tag "preview","video-js" %>
<div class="mainsec">
  <h1 class="title"></h1>
  <div class="player">
  </div>
  <div class="left">
      <p class="tagline"></p>

  </div>
  <div class="right">
    <h3>Download</h3>
      <ul id="downloadchild" class="child">
        <li><a class="ipad"   href="">iPad</a></li>
        <li><a class="iphone" href="">iPhone</a></li>
      </ul>
    
    <h3>Resources</h3>
    <ul id="morelist" class="morelist listbox">

    </ul>
    <ul id="referencelist" class="referencelist listbox active">
    </ul>
  </div>
</div>
<div class="sidesec">
  <div class="box">
    <h3>
      <%= @course.title %>
    </h3>
    <p class="buycourse">
      <%= @course.course_items.count %> Videos <button id="bt_buycourse" class="light_gradient buycourse">Buy series: $<%= @course.amount %> </button>
    </p>
    <p class="description">
      <%= @course.description %>
    </p>

    <ul id="courselist" class="courselist active listbox">
    <% @course.course_items.each do |ci| %>
      <li>
        <% if (ci.monetize == false || ci.ordering == 0 || (current_user != nil && current_user.playable?(ci))) %>
        <a class="play" cid="<%= ci.content.id %>" href="#">
          <p><%=  ci.content.title %></p>
          <span class="soft_gradient playbutton"><span class="icon">â€º</span></span>
        </a>
        <% else %>
        <span class="play">
          <a href="#" rel="<%= ci.id %>" class="buy <%= (current_user == nil) ? 'popup_login' : '' %>">
            <p><%=  ci.content.title %></p>
            <button class="light_gradient amount">Buy: $<%= ci.amount %></button>
          </a>
        </span>
        <% end %>
        <p><%= ci.content.tagline%></p>
      </li>
    <% end %>
    </ul>
    <form id="buy" action="<%= url_for :action => 'checkout' , :controller => 'purchasing' %>" method="post">
      <input type="hidden" name="ci" value="" />
      <input type="hidden" name="ret" value="<%= request.url %>" />
    </form>
  </div>

</div>
<%= render :partial => "shared/purchasebox", :locals => {:content => {}} %>

<% content_for(:javascript) do %>
  <script type="text/javascript">
    $(function() { 
      init("<%= courses_path %>");
    });
  </script>
<% end %>
