<%= javascript_include_tag 'purchasebox'%>
<div class="popup hide">
  <div class="payment">
<% if current_user.nil? %>
    <div class="step1">
      <ul id="step1_opts">
        <li><a href="#login">Login</a></li>
        <li><a href="#register">Register</a></li>
      </ul>
      <div id="login" class="login hide" >
        <h3>Login</h3>
        <form id="frmlogin" method="post" action="">
          <label for="email">Email:</label>
          <input type="text" name="email" id="email" />
          <label for="password">Password:</label>
          <input type="password" name="password" id="password" />
          <input type="submit" value="login" />
        </form>
      </div>
      <div id="register" class="register">
        <h3>Register</h3>
        <form id="frmregister" method="post" action="">
          <label for="email">Email:</label>
          <input type="text" name="email" id="email" />
          <label for="password">Password:</label>
          <input type="password" name="password" id="password" />
          <label for="password_confirmation">Confirmation</label>
          <input type="password" name="password_confirmation" id="password_confirmation" />
          <input type="submit" value="register" />
        </form>
      </div>
    </div>

<% else %>
    <div class="step2">
<% if !current_user.purchased? Content.last  %>
      <a href="<%= url_for :controller => 'purchasing', :action => 'checkout' %>">Buy Content</a>
<% else %>
     purchased!
<% end %>
    </div>
<% end %>
  </div>
  <div class="buybutton hide"><a href="<%= url_for :controller => 'purchasing', :action => 'checkout' %>"><img src="/images/pp-buynow.jpg" /></a></div>

</div>


<script type="text/javascript">
var regurl = '<%= url_for :controller => 'users', :action => 'register' %>';
var loginurl = '<%= url_for :controller => 'users', :action => 'sign_in' %>';
</script>