<%= render 'usernav' %>
<h2>Dashboard</h2>
<p>Welcome <%= @user.email %>!</p>
<div class="left">
  <h3>My Courses</h3>
  <ul>
  <% @user.courses.each do |course| %>
    <li>
      <h5><%= course.title %></h5>
      <small><%= course.description %></small> <%= link_to 'delete', "courses/destroy/" + course.id.to_s  %>
    </li>
  <% end %>
  </ul>

</div>
<div class="right">
  <h3>My Content</h3>
  <%= link_to 'New Content', new_content_path %>
  <ul>
  <% @user.maincontents.each do |content| %>
    <li>
      <h5><%= content.title %></h5>
      <small><%= content.type %>,  <%= content.status %></small> <%= link_to 'edit', edit_content_path(content) %> | <%= link_to 'delete', "contents/destroy/" + content.id.to_s  %>
    </li>
  <% end %>
  </ul>

</div>
